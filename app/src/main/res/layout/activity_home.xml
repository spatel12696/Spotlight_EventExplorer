<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#101820">

    <!-- ðŸŸ¡ Custom Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/customToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFD700"
        android:elevation="6dp"
        android:paddingHorizontal="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Left: Map Button -->
            <ImageButton
                android:id="@+id/mapButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_map"
                android:contentDescription="Open Map"
                android:tint="#101820" />

            <!-- Center: App Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Spotlight"
                android:textColor="#101820"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Right: Saved Events -->
            <ImageButton
                android:id="@+id/savedEventsButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="6dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_star"
                android:contentDescription="Saved Events"
                android:tint="#101820" />

            <!-- Right: Search Button -->
            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="6dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_search"
                android:contentDescription="Search"
                android:tint="#101820" />

            <!-- Right: Logout -->
            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_logout"
                android:contentDescription="Logout"
                android:tint="#101820" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- ðŸŸ¡ Title -->
    <TextView
        android:id="@+id/eventsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŒŸ All Events"
        android:textColor="#FFD700"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <!-- ðŸŸ¡ Events RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>
